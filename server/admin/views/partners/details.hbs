<header class='flex flex-col gap-4 py-6 px-6 mx-auto max-w-screen-2xl'>
  <div class='flex items-center justify-between'>
    <h1 class='text-4xl font-bold'>{{partner.name}}</h1>
    <a
      href='/admin/partners'
      class='flex items-center gap-2 px-4 py-2 rounded-md bg-green-600 text-gray-100 hover:underline'
    >
      <span class='material-symbols-outlined'>arrow_back</span>
      <span>Return to Partners</span>
    </a>
  </div>

  <div class='flex gap-4'>
    <a
      href='/admin/partners/{{partner.user_id}}/edit'
      class='bg-blue-600 text-white px-4 py-2 rounded-md hover:opacity-80'
    >
      Edit Partner
    </a>
    <form
      action='/admin/partners/{{partner.user_id}}/delete'
      method='post'
      class='inline'
    >
      <button
        type='submit'
        class='bg-red-600 text-white px-4 py-2 rounded-md hover:opacity-80 flex items-center gap-1'
        onclick="return confirm('Are you sure you want to delete partner {{partner.name}}?')"
      >
        Delete Partner
      </button>
    </form>
  </div>
</header>

<section class='px-6 mx-auto max-w-screen-2xl'>
  <h2 class='text-lg font-semibold text-gray-600 mb-4'>Partner User ID:
    {{partner.user_id}}</h2>

  <div class='grid grid-cols-1 md:grid-cols-2 gap-6 text-base'>
    <p><strong>Partner Name:</strong> {{partner.name}}</p>
    <p><strong>Interests:</strong> {{partner.interests}}</p>
    <p><strong>Work Field:</strong> {{partner.field_of_study_work_research}}</p>
    <p><strong>Location:</strong> {{partner.current_location}}</p>
    <p><strong>Phone:</strong>
      {{#if partner.country_code}}{{partner.country_code}}
      {{/if}}{{partner.phone}}</p>
    <p><strong>Email:</strong> {{partner.email}}</p>
    <p><strong>Website:</strong> {{partner.website}}</p>
    <p><strong>LinkedIn:</strong> {{partner.linkedin}}</p>
    <p><strong>Instagram:</strong> {{partner.instagram}}</p>
    <p><strong>Facebook:</strong> {{partner.facebook}}</p>
    <p><strong>Working Participants:</strong>
      <style>
        .underlined-link { text-decoration: underline; }
      </style>
      {{#each partner.working_participants}}
        <a
          href='/admin/participants/{{this.user_id}}'
          class='underlined-link'
        >{{this.name}}</a>{{#unless @last}}, {{/unless}}
      {{/each}}
    </p>
    <p><strong>Representatives:</strong> {{partner.representatives}}</p>
    <p class='md:col-span-2'><strong>Biography:</strong>
      {{partner.biography}}</p>
  </div>
</section>